@inject IConfiguration _configuration

<_Avatar Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);"
         UserName="Viwe Nkepu" UserRole="Software Developer" />
<MudDivider Class="mb-4" />

<MudNavMenu>

    <MudText Typo="Typo.subtitle2"
             Color="Color.Inherit"
             Class="ml-4 my-3">
        Default Examples
    </MudText>

    <MudNavLink Match="NavLinkMatch.All"
                Href="/"
                Icon="@Icons.Outlined.Home">
        Home
    </MudNavLink>

    <MudNavLink Match="NavLinkMatch.All"
                Href="counter"
                Icon="@Icons.Outlined.Watch">
        Counter
    </MudNavLink>

    <MudNavLink Match="NavLinkMatch.All"
                Href="fetchdata"
                Icon="@Icons.Outlined.DataUsage">
        Fetch data
    </MudNavLink>

    <MudText Typo="Typo.subtitle2"
             Color="Color.Inherit"
             Class="ml-4 my-3">
        API Integration
    </MudText>

    <MudNavLink Match="NavLinkMatch.All"
                Href="@(GetSwaggerUrl(_configuration))"
                Icon="@Icons.Custom.FileFormats.FileDocument"
                Target="_blank">
        Swagger
    </MudNavLink>

    <MudNavGroup Title="Authentication"
                 Icon="@Icons.Material.Outlined.AccountBox"
                 HideExpandIcon="true">

        <MudNavLink Href="/authentication/register"
                    Icon="@Icons.Material.Outlined.Assignment">
            Register
        </MudNavLink>

        <MudNavLink Href="/authentication/login"
                    Icon="@Icons.Material.Outlined.LockOpen">
            Login
        </MudNavLink>

    </MudNavGroup>

    <MudNavGroup Title="Authorization"
                 Icon="@Icons.Material.Outlined.SupervisedUserCircle"
                 HideExpandIcon="true">

        <MudNavLink Href="/account"
                    Icon="@Icons.Material.Outlined.AccountCircle">
            User details
        </MudNavLink>

        <MudNavLink Href="/role"
                    Icon="@Icons.Material.Outlined.SafetyDivider">
            Manage Roles
        </MudNavLink>

        <MudNavLink Href="#"
                    Icon="@Icons.Material.Outlined.ManageAccounts"
                    Disabled="true">
            Manage User Roles
        </MudNavLink>

        <MudNavLink Href="#"
                    Icon="@Icons.Material.Outlined.AdminPanelSettings"
                    Disabled="true">
            Role permissions
        </MudNavLink>

    </MudNavGroup>

</MudNavMenu>

